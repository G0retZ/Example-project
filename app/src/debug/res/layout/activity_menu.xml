<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:keepScreenOn="true"
  android:orientation="vertical">
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/appBar"
    style="@style/AppTheme.AppBar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:navigationIcon="@drawable/ic_back_24dp"
    app:title="@string/menu">
    <ImageButton
      android:id="@+id/serverSettings"
      style="@style/Widget.AppCompat.ActionButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:contentDescription="@null"
      app:srcCompat="@drawable/ic_settings"/>
  </androidx.appcompat.widget.Toolbar>
  <fragment
    android:id="@+id/fragment_new_pre_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.NewPreOrderFragment"
    tools:layout="@layout/fragment_new_pre_order"/>
  <fragment
    android:id="@+id/fragment_menu"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:name="com.cargopull.executor_driver.view.MenuFragment"
    tools:layout="@layout/fragment_menu"/>
  <fragment
    android:id="@+id/fragment_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.ProfileFragment"
    tools:layout="@layout/fragment_profile"/>
</LinearLayout>
