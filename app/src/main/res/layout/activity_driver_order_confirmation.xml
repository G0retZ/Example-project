<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:keepScreenOn="true">
  <fragment
    android:id="@+id/fragment_driver_order_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.fasten.executor_driver.view.DriverOrderConfirmationFragment"
    tools:layout="@layout/fragment_driver_order_confirmation"/>
  <fragment
    android:id="@+id/fragment_server_connection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.fasten.executor_driver.view.ServerConnectionFragment"
    tools:layout="@layout/fragment_server_connection"/>
</FrameLayout>
