<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:keepScreenOn="true">
  <fragment
    android:id="@+id/fragment_pre_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="72dp"
    android:layout_marginBottom="56dp"
    android:name="com.cargopull.executor_driver.view.PreOrderConfirmationFragment"
    app:layout_constraintBottom_toTopOf="@id/fragment_driver_pre_order_confirmation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"
    tools:layout="@layout/fragment_pre_order"/>
  <fragment
    android:id="@+id/fragment_driver_pre_order_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.cargopull.executor_driver.view.DriverPreOrderConfirmationFragment"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/fragment_pre_order"
    tools:layout="@layout/fragment_driver_pre_order_confirmation"/>
  <fragment
    android:id="@+id/fragment_server_connection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.ServerConnectionFragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"
    tools:layout="@layout/fragment_server_connection"/>
</FrameLayout>