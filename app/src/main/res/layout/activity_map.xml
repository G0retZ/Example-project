<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:keepScreenOn="true">
  <android.support.v7.widget.Toolbar
    android:id="@+id/appBar"
    style="@style/AppTheme.AppBar"
    android:layout_width="0dp"
    android:layout_height="?android:attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:navigationIcon="@drawable/ic_menu_24dp">
    <fragment
      android:id="@+id/fragment_balance_summary"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginEnd="?android:attr/actionBarSize"
      android:layout_marginRight="?android:attr/actionBarSize"
      android:name="com.cargopull.executor_driver.view.BalanceSummaryFragment"
      tools:layout="@layout/fragment_balance_summary"/>
  </android.support.v7.widget.Toolbar>
  <fragment
    android:id="@+id/fragment_go_online"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.GoOnlineFragment"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout="@layout/fragment_go_online"/>
  <fragment
    android:id="@+id/fragment_map"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.cargopull.executor_driver.view.MapFragment"
    app:layout_constraintBottom_toTopOf="@id/fragment_go_online"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"/>
  <fragment
    android:id="@+id/fragment_server_connection"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.ServerConnectionFragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"
    tools:layout="@layout/fragment_server_connection"/>
</android.support.constraint.ConstraintLayout>
