<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:keepScreenOn="true">
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/appBar"
    style="@style/AppTheme.AppBar"
    android:layout_width="0dp"
    android:layout_height="?android:attr/actionBarSize"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:navigationIcon="@drawable/ic_menu_24dp">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:baselineAligned="false"
      android:gravity="center_vertical"
      android:orientation="horizontal">
      <fragment
        android:id="@+id/fragment_balance_summary"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="com.cargopull.executor_driver.view.BalanceSummaryFragment"
        tools:layout="@layout/fragment_balance_summary"/>
      <fragment
        android:id="@+id/fragment_new_pre_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.cargopull.executor_driver.view.NewPreOrderButtonFragment"
        tools:layout="@layout/fragment_new_pre_order_button"/>
    </LinearLayout>
  </androidx.appcompat.widget.Toolbar>
  <fragment
    android:id="@+id/fragment_map"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.cargopull.executor_driver.view.MapFragment"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"/>
  <fragment
    android:id="@+id/fragment_online"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.cargopull.executor_driver.view.OnlineFragmentForMap"
    app:layout_constraintBottom_toTopOf="@id/fragment_upcoming_pre_order"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"
    tools:layout="@layout/fragment_online_map"/>
  <fragment
    android:id="@+id/fragment_upcoming_pre_order"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.UpcomingPreOrderNotificationFragment"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout="@layout/fragment_upcoming_pre_order"/>
  <fragment
    android:id="@+id/fragment_server_connection"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.ServerConnectionFragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"
    tools:layout="@layout/fragment_server_connection"/>
</androidx.constraintlayout.widget.ConstraintLayout>