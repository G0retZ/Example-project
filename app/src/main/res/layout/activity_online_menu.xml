<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:keepScreenOn="true"
  android:orientation="vertical">
  <android.support.v7.widget.Toolbar
    android:id="@+id/appBar"
    style="@style/AppTheme.AppBar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:navigationIcon="@drawable/ic_back_24dp"
    app:title="@string/menu"/>
  <fragment
    android:id="@+id/fragment_menu"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:name="com.cargopull.executor_driver.view.MenuFragment"
    tools:layout="@layout/fragment_menu"/>
  <fragment
    android:id="@+id/fragment_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:name="com.cargopull.executor_driver.view.ProfileFragment"
    tools:layout="@layout/fragment_profile"/>
  <fragment
    android:id="@+id/fragment_online"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:name="com.cargopull.executor_driver.view.OnlineFragmentForMenu"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBar"
    tools:layout="@layout/fragment_online"/>
</LinearLayout>
