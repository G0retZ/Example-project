<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:keepScreenOn="true"
  android:orientation="vertical">
  <androidx.appcompat.widget.Toolbar
    android:id="@+id/appBar"
    style="@style/AppTheme.AppBar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:navigationIcon="@drawable/ic_back_24dp"
    app:title="@string/order_details"/>
  <fragment
    android:id="@+id/fragment_order_cost_details_order_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.cargopull.executor_driver.view.ActionOrderDetailsFragment"
    tools:layout="@layout/fragment_action_order_details"/>
</LinearLayout>
