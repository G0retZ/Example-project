<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:keepScreenOn="true"
  android:orientation="vertical">
  <androidx.viewpager.widget.ViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <com.google.android.material.tabs.TabLayout
      android:id="@+id/tabs"
      android:layout_width="match_parent"
      android:layout_height="128dp"
      android:layout_gravity="top"
      android:paddingTop="80dp"
      android:background="@color/colorWindowBackgroundSecondNew"
      app:tabSelectedTextColor="@color/textColorPrimaryNew"
      app:tabTextAppearance="@style/TextAppearance.AppThemeNew.TabText"
      app:tabTextColor="@color/textColorSecondaryNew"/>
  </androidx.viewpager.widget.ViewPager>
  <include layout="@layout/molecule_toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
