<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <TextView
    android:id="@+id/codeHeader"
    style="@style/TextAppearance.AppThemeNew.TabText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:text="@string/sms_code_message"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/codeHeaderPhone"
    style="@style/TextAppearance.AppThemeNew.Headline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/codeHeader"
    tools:text="+7 (999) 700-44-50"/>
  <EditText
    android:id="@+id/codeInput"
    style="@style/TextAppearance.AppThemeNew.Headline"
    android:layout_width="256dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/ic_code_input_default"
    android:cursorVisible="false"
    android:digits="0123456789"
    android:hint="@null"
    android:inputType="number"
    android:maxLength="4"
    app:layout_constraintBottom_toTopOf="@id/sendSms"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/codeHeaderPhone"
    tools:text="0000"/>
  <Button
    android:id="@+id/sendSms"
    style="@style/AppTheme.Button.Borderless.Colored"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/repeat_code_from_sms_delayed"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/codeInput"/>
</androidx.constraintlayout.widget.ConstraintLayout>