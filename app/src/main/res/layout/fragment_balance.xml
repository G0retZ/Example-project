<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
    android:id="@+id/balanceError"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/colorError"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginEnd="4dp"
      android:background="@drawable/ic_ring"
      android:gravity="center"
      android:text="@string/currency_sign"
      android:textSize="20sp"/>
    <TextView
      style="@style/TextAppearance.AppCompat.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:text="@string/insufficient_credits"/>
  </LinearLayout>
  <TextView
    android:id="@+id/balanceAmount"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:gravity="center"
    android:text="@string/balance_amount"
    android:textColor="@android:color/white"
    android:textSize="50sp"
    app:layout_constraintBottom_toTopOf="@+id/minimumBalance"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/balanceError"
    app:layout_constraintVertical_chainStyle="packed"/>
  <TextView
    android:id="@+id/minimumBalance"
    style="@style/TextAppearance.AppCompat.Subhead"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/min_balance"
    app:layout_constraintBottom_toTopOf="@+id/goPaymentOptions"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/balanceAmount"
    />
  <Button
    android:id="@+id/goPaymentOptions"
    style="@style/AppTheme.Button.Colored.Dark"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:text="@string/top_up_balance"
    app:layout_constraintBottom_toTopOf="@+id/goHistory"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
  <Button
    android:id="@+id/goHistory"
    style="@style/AppTheme.Button.Borderless"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/payment_history"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>