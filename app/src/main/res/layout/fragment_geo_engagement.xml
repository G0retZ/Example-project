<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ImageView
    android:id="@+id/geoIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:contentDescription="@null"
    app:layout_constraintBottom_toTopOf="@+id/titleText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    app:srcCompat="@drawable/ic_satellite_icon"/>
  <TextView
    android:id="@+id/titleText"
    style="@style/TextAppearance.AppTheme.Title"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:gravity="center"
    android:text="@string/turn_on_geolocation"
    app:layout_constraintBottom_toTopOf="@id/explainText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/geoIcon"/>
  <TextView
    android:id="@+id/explainText"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="@string/geolocation_required"
    app:layout_constraintBottom_toTopOf="@id/settings"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/titleText"/>
  <Button
    android:id="@+id/settings"
    style="@style/AppTheme.Button.Borderless.Colored"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:layout_marginTop="32dp"
    android:paddingStart="44dp"
    android:paddingEnd="12dp"
    android:paddingLeft="44dp"
    android:paddingRight="8dp"
    android:text="@string/go_to_settings"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/explainText"/>
  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:contentDescription="@null"
    app:layout_constraintBottom_toBottomOf="@id/settings"
    app:layout_constraintStart_toStartOf="@id/settings"
    app:layout_constraintTop_toTopOf="@id/settings"
    app:srcCompat="@drawable/ic_settings"/>
</androidx.constraintlayout.widget.ConstraintLayout>
