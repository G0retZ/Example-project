<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <TextView
    android:id="@+id/addressTitleText"
    style="@style/TextAppearance.AppCompat.Subhead"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/address"
    android:textColor="@color/colorAccentSecond"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/addressText"
    style="@style/TextAppearance.AppCompat.Title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/addressTitleText"
    tools:text="Москва, ул. Академика Пилюгина, 14 корпус 4, кв. 1122"/>
  <TextView
    android:id="@+id/commentTitleText"
    style="@style/TextAppearance.AppCompat.Subhead"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="@string/comment"
    android:textColor="@color/colorAccentSecond"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/addressText"/>
  <TextView
    android:id="@+id/commentText"
    style="@style/TextAppearance.AppCompat.Title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/commentTitleText"
    tools:text="Заезд со стороны двора\nВзять пропуск"/>
  <TextView
    android:id="@+id/timerTitleText"
    style="@style/TextAppearance.AppCompat.Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:enabled="false"
    android:text="@string/before_meet_client"
    app:layout_constraintBottom_toTopOf="@id/timerText"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/commentText"
    app:layout_constraintVertical_chainStyle="packed"/>
  <TextView
    android:id="@+id/timerText"
    style="@style/TextAppearance.AppCompat.Headline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:textSize="50sp"
    app:layout_constraintBottom_toTopOf="@id/openNavigator"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/timerTitleText"
    tools:text="05:28"/>
  <Button
    android:id="@+id/openNavigator"
    style="@style/AppTheme.Button.Colored.Darker"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="4dp"
    android:layout_marginLeft="4dp"
    android:text="@string/navigator"
    app:layout_constraintBottom_toTopOf="@id/reportArrived"
    app:layout_constraintEnd_toStartOf="@+id/callToClient"
    app:layout_constraintStart_toStartOf="parent"/>
  <Button
    android:id="@+id/callToClient"
    style="@style/AppTheme.Button.Colored.Darker"
    android:layout_width="0dp"
    android:layout_height="64dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:text="@string/call_client"
    app:layout_constraintBottom_toTopOf="@id/reportArrived"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/openNavigator"/>
  <ProgressBar
    android:id="@+id/reportArrived"
    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
    android:layout_width="0dp"
    android:layout_height="52dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:progressDrawable="@drawable/button_progressbar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
  <TextView
    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:gravity="center"
    android:text="@string/arrived"
    android:textColor="@android:color/primary_text_dark"
    android:textSize="19sp"
    app:layout_constraintBottom_toBottomOf="@id/reportArrived"
    app:layout_constraintEnd_toEndOf="@id/reportArrived"
    app:layout_constraintStart_toStartOf="@id/reportArrived"
    app:layout_constraintTop_toTopOf="@id/reportArrived"/>
</androidx.constraintlayout.widget.ConstraintLayout>