<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:orientation="vertical">
  <TextView
    android:id="@+id/summaryTitle"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/total"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/summaryProfit"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:textColor="@color/colorAccentGreen"
    app:layout_constraintEnd_toStartOf="@id/slash"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/slash"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:text="@string/slash"
    app:layout_constraintEnd_toStartOf="@id/summaryLoss"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/summaryLoss"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:textColor="@color/colorError"
    app:layout_constraintEnd_toStartOf="@id/expandMore"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@string/currency_format"/>
  <ImageButton
    android:id="@+id/expandMore"
    style="@style/Widget.AppCompat.ActionButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="@null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_expand_more"/>
  <TextView
    android:id="@+id/completedTitle"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/completed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/expandMore"/>
  <TextView
    android:id="@+id/completed"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorAccentGreen"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/expandMore"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/commissionTitle"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/service_comission"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/completedTitle"/>
  <TextView
    android:id="@+id/commission"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorAccentYellow"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/completed"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/rejectedTitle"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/refused"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/commissionTitle"/>
  <TextView
    android:id="@+id/rejected"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorError"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/commission"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/cancelledTitle"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/order_cancelled"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rejectedTitle"/>
  <TextView
    android:id="@+id/cancelled"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorError"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rejected"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/missedTitle"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/order_missed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cancelledTitle"/>
  <TextView
    android:id="@+id/missed"
    style="@style/TextAppearance.AppTheme.SubTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorError"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/cancelled"
    tools:text="@string/currency_format"/>
  <FrameLayout
    android:id="@+id/pendingIndicator"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/colorSmoke"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ProgressBar
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"/>
  </FrameLayout>
  <TextView
    android:id="@+id/networkErrorText"
    style="@style/TextAppearance.AppTheme.Title.Secondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="64dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/sms_network_error"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/retryButton"
    style="@style/AppTheme.Button.Borderless.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="@string/retry"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/networkErrorText"/>
</androidx.constraintlayout.widget.ConstraintLayout>