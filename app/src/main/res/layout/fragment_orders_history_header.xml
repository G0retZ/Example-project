<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true"
  android:orientation="vertical">
  <TextView
    android:id="@+id/earnedTitle"
    style="@style/TextAppearance.AppThemeNew.Regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/orders_earned"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/earned"
    style="@style/TextAppearance.AppThemeNew.Regular.Green"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorAccentGreen"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/earnedCount"
    style="@style/TextAppearance.AppThemeNew.Regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="@string/orders_count"
    app:layout_constraintEnd_toStartOf="@id/earned"
    app:layout_constraintTop_toTopOf="parent"/>
  <TextView
    android:id="@+id/rejectedTitle"
    style="@style/TextAppearance.AppThemeNew.Regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/orders_rejected"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/earnedTitle"/>
  <TextView
    android:id="@+id/rejected"
    style="@style/TextAppearance.AppThemeNew.Regular.Red"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorError"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/earned"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/rejectedCount"
    style="@style/TextAppearance.AppThemeNew.Regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="@string/orders_count"
    app:layout_constraintEnd_toStartOf="@id/rejected"
    app:layout_constraintTop_toBottomOf="@id/earnedCount"/>
  <TextView
    android:id="@+id/missedTitle"
    style="@style/TextAppearance.AppThemeNew.Regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/orders_missed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rejectedTitle"/>
  <TextView
    android:id="@+id/missed"
    style="@style/TextAppearance.AppThemeNew.Regular.Red"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:textColor="@color/colorError"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/rejected"
    tools:text="@string/currency_format"/>
  <TextView
    android:id="@+id/missedCount"
    style="@style/TextAppearance.AppThemeNew.Regular"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="@string/orders_count"
    app:layout_constraintEnd_toStartOf="@id/missed"
    app:layout_constraintTop_toBottomOf="@id/rejectedCount"/>
  <FrameLayout
    android:id="@+id/pendingIndicator"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/colorSmoke"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ProgressBar
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"/>
  </FrameLayout>
  <TextView
    android:id="@+id/networkErrorText"
    style="@style/TextAppearance.AppTheme.Title.Secondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="64dp"
    android:layout_marginStart="@dimen/horizontal_margin"
    android:layout_marginEnd="@dimen/horizontal_margin"
    android:text="@string/sms_network_error"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <Button
    android:id="@+id/retryButton"
    style="@style/AppTheme.Button.Borderless.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="@string/retry"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/networkErrorText"/>
</androidx.constraintlayout.widget.ConstraintLayout>