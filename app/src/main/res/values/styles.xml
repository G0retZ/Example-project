<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorWindowBackground</item>
  </style>

  <!-- Button styles -->
  <style name="AppTheme.Button.Theme" parent="AppTheme">
  </style>

  <style name="AppTheme.Button.Theme.Light">
    <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>
  </style>

  <style name="AppTheme.Button.Theme.Dark">
    <item name="colorAccent">@color/colorAccentSecond</item>
  </style>

  <style name="AppTheme.Button.Theme.Darker">
    <item name="colorAccent">@color/colorDivider</item>
    <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>
  </style>

  <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textSize">19sp</item>
    <item name="android:theme">@style/AppTheme.Button.Theme.Light</item>
  </style>

  <style name="AppTheme.Button.Colored.Dark" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textSize">19sp</item>
    <item name="android:theme">@style/AppTheme.Button.Theme.Darker</item>
  </style>

  <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">19sp</item>
  </style>

  <style name="AppTheme.Button.Borderless.Small" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AppTheme.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textSize">16sp</item>
    <item name="android:theme">@style/AppTheme.Button.Theme.Dark</item>
  </style>

  <style name="AppTheme.Button.Borderless.Filled">
    <item name="android:background">@drawable/ic_button_background</item>
  </style>

  <style name="AppTheme.CompoundButton.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
    <item name="android:textSize">16sp</item>
    <item name="android:thumb">@drawable/ic_thumb_big</item>
  </style>

  <style name="AppTheme.SeekBar.Discrete" parent="Widget.AppCompat.SeekBar.Discrete">
    <item name="android:thumb">@drawable/ic_thumb</item>
    <item name="tickMark">@drawable/ic_tick_mark</item>
  </style>

  <style name="AppTheme.SeekBar.Theme.Green" parent="AppTheme">
    <item name="colorAccent">@color/colorAccentGreen</item>
  </style>

  <style name="AppTheme.SeekBar.Green" parent="Widget.AppCompat.SeekBar">
    <item name="android:thumb">@drawable/ic_thumb</item>
    <item name="android:theme">@style/AppTheme.SeekBar.Theme.Green</item>
  </style>

  <style name="AppTheme.AppBar" parent="Widget.AppCompat.Toolbar">
    <item name="android:height">?android:attr/actionBarSize</item>
    <item name="android:background">@color/colorPrimary</item>
    <item name="contentInsetStartWithNavigation">0dp</item>
  </style>

</resources>
