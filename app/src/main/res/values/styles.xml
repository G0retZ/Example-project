<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorWindowBackground</item>
  </style>

  <!-- Button styles -->
  <style name="AppTheme.Button.Theme" parent="AppTheme">
  </style>

  <style name="AppTheme.Button.Theme.Light" parent="AppTheme">
    <item name="android:textColorPrimaryInverse">@android:color/primary_text_dark</item>
  </style>

  <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
    <item name="android:theme">@style/AppTheme.Button.Theme.Light</item>
  </style>

  <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless"/>

  <style name="AppTheme.Button.Borderless.Filled">
    <item name="android:textSize">19sp</item>
    <item name="android:background">@drawable/ic_button_background</item>
  </style>

  <style name="AppTheme.CompoundButton.Switch" parent="AppTheme.CompoundButton.Switch">
    <item name="android:textSize">16sp</item>
    <item name="android:thumb">@drawable/ic_thumb_big</item>
  </style>

  <style name="AppTheme.SeekBar.Discrete" parent="Widget.AppCompat.SeekBar.Discrete">
    <item name="android:thumb">@drawable/ic_thumb</item>
    <item name="tickMark">@drawable/ic_tick_mark</item>
  </style>

</resources>
