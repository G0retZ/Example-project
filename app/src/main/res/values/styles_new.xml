<resources>

  <!-- Base application theme. -->
  <style name="AppThemeNew" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="colorPrimary">@color/colorPrimaryNew</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDarkNew</item>
    <item name="colorAccent">@color/colorAccentNew</item>
    <item name="android:windowBackground">@color/colorWindowBackgroundNew</item>
  </style>

  <!-- Color themes. -->
  <style name="AppThemeNew.Button.Theme" parent="AppThemeNew">
  </style>

  <style name="AppTheme.Accent.Primary" parent="AppTheme">
    <item name="colorAccent">@color/colorPrimaryNew</item>
  </style>

  <!-- Text styles -->

  <style name="TextAppearance.AppThemeNew.Headline" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">@color/textColorPrimaryNew</item>
    <item name="android:textSize">@dimen/headline_text_size</item>
    <item name="android:textColorHint">@color/colorPrimaryNew</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Big" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">@color/textColorPrimaryNew</item>
    <item name="android:textSize">@dimen/big_text_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Button" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">@color/text_color_button</item>
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Button.Borderless" parent="TextAppearance.AppCompat.Medium">
    <item name="android:textColor">@color/text_color_button_borderless</item>
    <item name="android:textSize">@dimen/button_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Regular" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/textColorPrimaryNew</item>
    <item name="android:textSize">@dimen/regular_text_size</item>
  </style>

  <style name="TextAppearance.AppThemeNew.TabText" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/textColorPrimaryNew</item>
    <item name="android:textSize">@dimen/regular_text_size</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Regular.Red">
    <item name="android:textColor">@color/aRed</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Regular.Green">
    <item name="android:textColor">@color/aGreen</item>
  </style>

  <style name="TextAppearance.AppThemeNew.Regular.Blue">
    <item name="android:textColor">@color/aBlue</item>
  </style>

  <!-- Button styles -->

  <style name="AppThemeNew.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:padding">14dp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppThemeNew.Button.Borderless</item>
  </style>

  <style name="AppThemeNew.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="android:layout_marginStart">16dp</item>
    <item name="android:layout_marginLeft">16dp</item>
    <item name="android:layout_marginEnd">16dp</item>
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:padding">14dp</item>
    <item name="android:background">@drawable/ic_new_button_background</item>
    <item name="android:textAppearance">@style/TextAppearance.AppThemeNew.Button</item>
  </style>

  <style name="AppThemeNew.Button.FullWidth" parent="Widget.AppCompat.Button.Colored">
    <item name="android:padding">14dp</item>
    <item name="android:background">@drawable/ic_new_button_full_width_background</item>
    <item name="android:textAppearance">@style/TextAppearance.AppThemeNew.Button</item>
  </style>
</resources>
